<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediumActivity3"
    android:background="@drawable/mastermindbg"
    android:orientation="vertical"
    >


    <ImageButton
        android:id="@+id/backH_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/back_btn"
        android:scaleType="center"
        android:src="@drawable/ic_arrow_back" />
    <ImageButton
        android:id="@+id/questionH1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/back_btn"
        android:scaleType="center"
        android:src="@drawable/ic_question_mark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-160dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="35dp"
            android:background="@drawable/ingame_assets"
            android:drawableLeft="@drawable/ic_star"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="Medium"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/timerH1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:background="@drawable/ingame_assets"
            android:drawableLeft="@drawable/ic_clock"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="00:00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />


        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:background="@drawable/ingame_assets"
            android:drawableLeft="@drawable/ic_score"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:text="03"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btn_tryagain"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="270dp"
            android:background="@drawable/back_btn"
            android:text="Try Again"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/WinGame_layout"
            android:layout_width="match_parent"
            android:layout_height="503dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="-250dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:text="Great"
                android:textAllCaps="true"
                android:textColor="@color/yellow_500"
                android:textSize="65sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="270dp"
                android:background="@drawable/round_button"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ingameLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="503dp"
            android:orientation="vertical"
            android:visibility="visible">


            <EditText
                android:id="@+id/edit_textH"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:textAllCaps="true"
                android:textColor="@color/yellow_500"
                android:textSize="65sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/layout_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>